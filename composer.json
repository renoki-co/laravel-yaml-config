{
    "name": "renoki-co/laravel-yaml-env",
    "description": "The usual Laravel .env file, but with YAML. Write objects and arrays in your config without having to write ugly inline, JSON.",
    "keywords": ["laravel", "php", "yaml", "env", "environment"],
    "license": "Apache-2.0",
    "homepage": "https://github.com/renoki-co/laravel-yaml-env",
    "authors": [
        {
            "name": "Alex Renoki",
            "homepage": "https://github.com/rennokki",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-yaml": "*",
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "RenokiCo\\LaravelYamlEnv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RenokiCo\\LaravelYamlEnv\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require-dev": {
        "laravel/legacy-factories": "^1.1",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.22.0",
        "vimeo/psalm": "4.12.0"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "extra": {
        "laravel": {
            "providers": [
                "RenokiCo\\LaravelYamlEnv\\LaravelYamlEnvServiceProvider"
            ]
        }
    }
}
